<% layout('layouts/boilerplate') -%>

  
  <!-- Hero Section -->
  <section class="bg-light text-center py-5">
    <div class="container">
      <h1 class="display-4 mb-4">Welcome to the Student Management System</h1>
      <p class="lead mb-4">Manage student data and information efficiently in one place.</p>
      <a href="#" class="btn btn-primary btn-lg">Get Started</a>
    </div>
  </section>

  <!-- Features Section -->
  <section class="container my-5">
    <div class="row text-center">
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">View Students</h5>
            <p class="card-text">View the list of all students with their details.</p>
            <a href="/show-students" class="btn btn-secondary">View Students</a>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Add Student</h5>
            <p class="card-text">Add new student information to the system.</p>
            <a href="/add-student" class="btn btn-secondary">Add Student</a>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Manage Students</h5>
            <p class="card-text"> remove student records as needed.</p>
            <a href="/delete-student" class="btn btn-secondary">Delete Students</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  